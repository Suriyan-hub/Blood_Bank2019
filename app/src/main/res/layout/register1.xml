<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="20dp">

    <GridLayout
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/comment_edit_text"
            android:maxLines="5"
            android:padding="20dp"
            android:text="Donar_ID"
            android:textColor="@color/background_material_dark" />

        <EditText
            android:id="@+id/comment_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill|center_horizontal"
            android:hint="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/comment_edit_text"
            android:maxLines="5"
            android:padding="20dp"
            android:text="Donar_Name"
            android:textColor="@color/background_material_dark" />

        <EditText
            android:id="@+id/comment_edit_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill|center_horizontal"
            android:hint="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/comment_edit_text"
            android:maxLines="5"
            android:padding="20dp"
            android:text="Age"
            android:textColor="@color/background_material_dark" />

        <EditText
            android:id="@+id/comment_edit_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill|center_horizontal"
            android:hint="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/comment_edit_text"
            android:maxLines="5"
            android:padding="20dp"
            android:text="Sex"
            android:textColor="@color/background_material_dark" />

        <RadioGroup
            android:id="@+id/groupradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/radio_id1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radio_id2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="20dp" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/comment_edit_text"
            android:maxLines="5"
            android:padding="20dp"
            android:text="Contact No"
            android:textColor="@color/background_material_dark" />

        <EditText
            android:id="@+id/comment_edit_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill|center_horizontal"
            android:hint="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/comment_edit_text"
            android:maxLines="5"
            android:padding="20dp"
            android:text="Date"
            android:textColor="@color/background_material_dark" />

        <EditText
            android:id="@+id/comment_edit_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill|center_horizontal"
            android:hint="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/comment_edit_text"
            android:maxLines="5"
            android:padding="20dp"
            android:text="BB_Id"
            android:textColor="@color/background_material_dark" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtVw"
            android:layout_toRightOf="@+id/txtVw" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/comment_edit_text"
            android:maxLines="10"
            android:padding="20dp"
            android:text="BB_Name"
            android:textColor="@color/background_material_dark" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtVw"
            android:layout_toRightOf="@+id/txtVw" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/comment_edit_text"
            android:maxLines="10"
            android:padding="20dp"
            android:text="BloodType"
            android:textColor="@color/background_material_dark" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtVw"
            android:layout_toRightOf="@+id/txtVw" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/comment_edit_text"
            android:maxLines="10"
            android:padding="20dp"
            android:text="District"
            android:textColor="@color/background_material_dark" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtVw"
            android:layout_toRightOf="@+id/txtVw" />

        <TextView
            android:layout_width="119dp"
            android:layout_height="48dp"
            android:labelFor="@+id/comment_edit_text"
            android:maxLines="10"
            android:text=" Blood Quantity"
            android:textColor="@color/background_material_dark" />

        <EditText
            android:id="@+id/comment_edit_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill|center_horizontal"
            android:hint="" />

    </GridLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="149dp"
        android:layout_height="62dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:text="Add" />


</LinearLayout>
